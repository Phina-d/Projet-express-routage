<h1>Contactez-nous</h1>

<div class="contact-container">

  <form action="/contact" method="POST" class="contact-form">

    <!-- Champ prénom -->
    <div class="form-group">
      <label for="firstname">Prénom</label>
      <input type="text" id="firstname" name="firstname" placeholder="Votre prénom" required />
    </div>

    <!-- Champ nom -->
    <div class="form-group">
      <label for="name">Nom</label>
      <input type="text" id="name" name="name" placeholder="Votre nom de famille" required />
    </div>

    <!-- Champ société -->
    <div class="form-group">
      <label for="company">Société</label>
      <input type="text" id="company" name="company" placeholder="Nom de votre entreprise" />
    </div>

    <!-- Champ téléphone -->
    <div class="form-group">
      <label for="phone">Téléphone</label>
      <input type="tel" id="phone" name="phone" placeholder="+221 77 000 00 00" pattern="^\+?[0-9\s\-]{7,15}$" />
    </div>

    <!-- Champ code postal -->
    <div class="form-group">
      <label for="postalcode">Code postal</label>
      <input type="text" id="postalcode" name="postalcode" placeholder="12345" pattern="\d{4,6}" />
    </div>

    <!-- Champ email -->
    <div class="form-group">
      <label for="email">Adresse email</label>
      <input type="email" id="email" name="email" placeholder="nom@exemple.com" required />
    </div>

    <!-- Champ message -->
    <div class="form-group">
      <label for="message">Votre message</label>
      <textarea id="message" name="message" rows="6" placeholder="Écrivez votre message ici..." required></textarea>
    </div>

    <!-- Bouton d'envoi -->
    <button type="submit">📨 Envoyer le message</button>

    <!-- Message de confirmation -->
    <% if (messageSent) { %>
      <p class="success-message">✅ Merci pour votre message, nous vous répondrons bientôt.</p>
    <% } %>

  </form>

  <section class="explore-services">
    <h2>Curieux de nos offres ?</h2>
    <a href="/" class="btn-primary">🏠 Retour à l'accueil</a>
  </section>

</div>
